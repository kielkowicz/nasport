%div{:class=>"navbar navbar-fixed-top"}
  %div{:class=>"navbar-inner"}
    %div{:class=>"container"}
      %ul.nav
        = link_to 'NaSport.pl', root_path, :class=>'brand'

        -if current_user
          %li= link_to 'Dodaj spotkanie' , new_event_path, :class=>'links_navbar'
          %li= link_to 'Szukaj spotkania' , search_events_path, :class => 'links_navbar'
          %li= link_to 'Moje spotkania' , mine_event_path(current_user), :class => 'links_navbar'
          
        -if current_user && current_user.admin?
          %li.dropdown
            %a{:href=>'#', :class=>'dropdown-toggle', 'data-toggle'=>'dropdown'} 
              Admin
              %b.caret
            %ul{:class=>'dropdown-menu'}
              %li= link_to 'Edit city', cities_path
              %li= link_to 'Edit places', places_path
              %li= link_to 'Edit disciplines', disciplines_path
              %li= link_to 'Reports', reports_path
      %ul.nav{:class=>'pull-right'}  
        -if current_user
          %li= link_to('Wyloguj', destroy_user_session_path, :method => :delete)

          %li.dropdown
            %a{:href=>'#', :class=>'dropdown-toggle', 'data-toggle'=>'dropdown'} 
              Konto
              %b.caret
            %ul{:class=>'dropdown-menu'}
              %li= link_to('Edytuj konto', edit_user_registration_path)
              %li= link_to('Wyloguj', destroy_user_session_path, :method => :delete)
        -else
          %li= link_to('Utwórz konto', new_user_registration_path)
          %li= link_to('Zaloguj się', new_user_session_path)
