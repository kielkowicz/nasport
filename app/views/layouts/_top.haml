%div
  - if current_user
    = link_to 'Dashboard', root_path
    |
    = link_to 'Add event' , new_event_path
    |
    = link_to 'Look for event' , '#'
    |
    = link_to 'My events' , mine_event_path(current_user)

  - if current_user && current_user.admin?
    = link_to 'Edit places', places_path
    |
    = link_to 'Edit disciplines', disciplines_path
    |
    = link_to 'Reports', reports_path
  |
  = current_user ? link_to('logout', destroy_user_session_path, :method => :delete) : link_to('login', new_user_session_path)
